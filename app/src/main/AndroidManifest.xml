<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.geno.chaoli.forum"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

	<application
		android:name=".ChaoliApplication"
		android:allowBackup="true"
		android:fullBackupContent="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity android:name=".view.Splash"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".view.MainActivity"
			android:screenOrientation="portrait"
			android:label="@string/app_name"
			android:theme="@style/MainActivityTheme">
		</activity>
		<activity android:name=".view.SettingsActivity"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".view.AnswerQuestionsActivity"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".view.SignUpActivity"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".view.LoginActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".view.PostActivity"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".view.ReplyAction"
			android:screenOrientation="portrait"/>
		<activity android:name=".view.HomepageActivity"
			android:screenOrientation="portrait">
		</activity>
		<activity android:name=".view.PostAction"
			android:screenOrientation="portrait"/><!-- ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information. -->
		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />
	</application>

</manifest>
